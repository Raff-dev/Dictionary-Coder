@{
    ViewData["Title"] = "Dictionary Coder";
}

@section bgImage{
    <img src="~/images/bgencoding.jpg" alt="Background image" />
    <div class="content">
        <div class="encode button">
            <span>
                Encode
            </span>
        </div>

        <div class="decode button">
            <span>
                Decode
            </span>
        </div>
    </div>
}
<div class="content">
    <div>
        <div>
            <div class="encode drag-file text-muted text-light">
                <div>
                    <span>Drag your file here</span>
                    <span>(.txt, .jpg, .jpeg, .png)</span>
                </div>
            </div>
            <div>
                <div class="button">
                    <span>Encode</span>
                </div>
            </div>
        </div>

    </div>

    <div>
        <div>
            <div class="decode drag-file text-muted text-light">
                <div>
                    <span>Drag your file here</span>
                    <span>(.lz77)</span>
                </div>
            </div>
            <div>
                <div class="button btn-info">
                    <span>Decode</span>
                </div>
            </div>
        </div>
    </div>
</div>
